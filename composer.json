{
  "name": "Lucas-C/tablut",
  "type": "project",
  "description": "Tablut BoardGameArena implementation",
  "minimum-stability": "stable",
  "license": "MIT",
  "authors": [
    {
      "name": "Lucas Cimon",
      "email": "none@nony.me"
    },
    {
      "name": "Nicolas Tafforeau",
      "email": "none@nony.me"
    }
  ],
  "autoload": {
    "psr-4": {
      "Tablut\\": "src/Tablut"
    },
    "files": [
      "src/Tablut/Functional/filter_to_list.php",
      "src/Tablut/Functional/group_to_lists.php",
      "src/Tablut/Functional/partition_to_lists.php",
      "src/Tablut/Functional/unique_list.php"
    ]
  },
  "bin": ["bin/tablut"],
  "require": {
    "php": ">=7.0.0",
    "ext-pdo_mysql": "*",
    "phpoption/phpoption": "1.5.0",
    "lstrojny/functional-php": "1.6.0"
  },
  "require-dev": {
    "php": ">=7.0.8",
    "dholmes/bga-workbench": "^0.0.4",
    "phpunit/phpunit": "^6.3.0",
    "squizlabs/php_codesniffer": "^3.0.0"
  },
  "scripts": {
    "check-styles": "phpcs --standard=PSR2 --tab-width=4 --ignore=src/BGAWorkbench/Stubs,tests/bootstrap.php -q -p tests src",
    "fix-styles": "phpcbf --standard=PSR2 --tab-width=4 --ignore=src/BGAWorkbench/Stubs,tests/bootstrap.php -q -p tests src",
    "clean": "composer exec bgawb -v clean",
    "build": "composer exec bgawb -v -- build",
    "deploy": "composer exec bgawb -v -- build -d",
    "watch": "composer exec bgawb -v -- build -w -d",
    "bga-validate": "composer exec bgawb -v validate",
    "test": "phpunit tests"
  }
}
